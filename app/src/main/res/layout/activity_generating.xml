<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mossy_background"
    tools:context="edu.wm.cs.cs301.janellekrupicka.gui.GeneratingActivity">

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="338dp"
        android:layout_height="278dp"
        android:backgroundTint="@color/sage_green"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.284" />

    <Spinner
        android:id="@+id/play_type"
        android:layout_width="153dp"
        android:layout_height="57dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="176dp"
        android:background="@color/sage_green"
        android:entries="@array/play_type_options"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="138dp"
        android:layout_height="57dp"
        android:layout_marginBottom="104dp"
        android:background="@color/sage_green"
        android:entries="@array/robot_type"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="84dp"
        android:layout_height="36dp"
        android:layout_marginStart="80dp"
        android:background="@color/sage_green"
        android:fontFamily="cursive"
        android:text="@string/robot_type"
        app:layout_constraintBaseline_toBaselineOf="@+id/spinner2"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="77dp"
        android:layout_height="32dp"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="13dp"
        android:background="@color/sage_green"
        android:fontFamily="cursive"
        android:text="@string/driver"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        app:layout_constraintBaseline_toBaselineOf="@+id/play_type"
        app:layout_constraintEnd_toStartOf="@+id/play_type"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="259dp"
        android:layout_height="41dp"
        android:layout_marginStart="77dp"
        android:layout_marginTop="61dp"
        android:layout_marginEnd="75dp"
        android:layout_marginBottom="27dp"
        android:background="@color/sage_green"
        android:fontFamily="cursive"
        android:text="@string/loading_message"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toTopOf="@+id/progressBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>